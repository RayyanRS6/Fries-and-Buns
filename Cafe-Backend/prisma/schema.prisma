generator client {
  provider = "prisma-client-js"
  output   = "../src/generated"  // relative to prisma/ folder
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id Int  @id @default(autoincrement())
  name String @unique
  items MenuItem[]
  createdAt DateTime @default(now())

}

model MenuItem {
  id          Int       @id @default(autoincrement())
  name        String
  price       Float
  description String?
  image       String?
  isPopular   Boolean   @default(false)
  categoryId  Int
  category    Category  @relation(fields: [categoryId], references: [id])
  createdAt   DateTime  @default(now())

}
